<%= image_tag @yoyo.image %>
<h1><%=@yoyo.title %></h1>
<p><%=@yoyo.description %></p>
<div><%=  @yoyo.model.name %> by <%= @yoyo.maker.name %></div>


<div id="edit_tools">
  <%= link_to "📝", edit_yoyo_path(@yoyo),
    title: "edit" %>
  <%= link_to "💥", yoyo_path(@yoyo),
    title: "destroy",
    method: :delete,
    data: {confirm: "Permanently remove?"} %>
</div>

<p>
  <%= link_to "<< Back to all yoyos", yoyos_path %>
</p>

<details>
<summary><strong>Comments</strong>(<%= @yoyo.comments.size %>) <small>Read at your own risk</small></summary>

<%= render partial: 'yoyos/comment', collection: @yoyo.comments %>

<%= render partial: 'comments/editor' %>

</details>
